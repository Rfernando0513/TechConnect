@model UserModel
@{
    ViewData["Title"] = "Confirmação de apagar";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuario (@Model.Name) ?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="User" asp-action="Index">Voltar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="User" asp-route-id="@Model.IdUser" asp-action="Delete">Excluir</a>