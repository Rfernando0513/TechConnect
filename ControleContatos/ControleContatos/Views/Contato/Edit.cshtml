@using ControleContatos.Enum;
@model ContatoModel
@{
    ViewData["Title"] = "Editar Contatos";
}

@if (TempData["MessageSucess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["MessageSucess"]
    </div>
}

@if (TempData["MessageErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["MessageErro"]
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <h1>Editar Contato</h1>
            </div>
            <form asp-controller="Contato" asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome Completo">
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>
                 
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o Email">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>

                <div class="form-group">
                    <label for="Celular">Celular</label>
                    <input type="tel" asp-for="Celular" class="form-control" placeholder="Digite o Celular">
                    @Html.ValidationMessageFor(x => x.Celular)
                </div>
                <div class="form-group form-group-cad-user">
                    <label for="Senioridade">Senioridade</label>
                    <select asp-for="Senioridade" class="form-control">
                        <option value="">Selecione</option>
                        <option value="@SenioridadeEnum.Estagiario">Estagiario</option>
                        <option value="@SenioridadeEnum.Junior">Junior</option>
                        <option value="@SenioridadeEnum.Pleno">Pleno</option>
                        <option value="@SenioridadeEnum.Senior">Senior</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Senioridade)
                </div>

                <div class="row justify-content-end">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Alterar</button>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
