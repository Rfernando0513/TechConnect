@model AlterPasswordModel
@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="container container-cad-user">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <h1>Alterar Senha</h1>
            </div>

            @if (TempData["MessageSucess"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                    @TempData["MessageSucess"]
                </div>
            }


            @if (TempData["MessageErro"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                    @TempData["MessageErro"]
                </div>
            }

            <form asp-controller="AlterPassword" asp-action="Alter" method="post">
                <div class="form-group form-group-cad-user">
                    <label for="PasswordAtual">Senha Atual</label>
                    <input type="password" asp-for="PasswordAtual" class="form-control" placeholder="Digite a Senha Atual.">
                    @Html.ValidationMessageFor(x => x.PasswordAtual)
                </div>
                <br />
                <div class="form-group form-group-cad-user">
                    <label for="NewPassword">Nova Senha</label>
                    <input type="password" asp-for="NewPassword" class="form-control" placeholder="Digite a Nova Senha.">
                    @Html.ValidationMessageFor(x => x.NewPassword)
                </div>
                <div class="form-group form-group-cad-user">
                    <label for="ConfirmPassword">Confirmar Nova Senha</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirme a Nova Senha.">
                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-add-recruter">Editar</button>
                    <a class="btn btn-voltar-recruter" asp-controller="Home" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
